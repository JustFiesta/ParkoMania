                  <TableColumn fx:id="stopCol" prefWidth="101.0" text="Do" />
                  <TableColumn fx:id="timeSummaryCol" prefWidth="148.0" text="Czas łącznie" />
              </columns>
            </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
